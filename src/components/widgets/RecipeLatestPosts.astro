---
import { getPermalink } from '~/utils/permalinks';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Button from '~/components/ui/Button.astro';
import { urlFor } from '~/lib/sanity'; // Sanity'den görsel çekmek için

// index.astro'dan gelen 'recipes' verisini burada yakalıyoruz
const { recipes = [], title = "Mutfaktan Son Tarifler" } = Astro.props;
---

<WidgetWrapper>
  <div class="mb-8 text-center">
    <h2 class="text-3xl font-bold tracking-tight sm:text-4xl font-heading">
      {title}
    </h2>
  </div>
  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    {recipes.map((recipe) => (
      <article class="group">
        <a href={`/tarifler/${recipe.slug.current}`}>
          <div class="relative">
            <img 
              src={urlFor(recipe.mainImage).width(400).height(250).url()}
              alt={recipe.title}
              class="w-full h-64 object-cover rounded-lg shadow-md transition-transform duration-300 ease-in-out group-hover:scale-105"
            />
          </div>
          <div class="mt-4">
            {recipe.category?.title && (
              <p class="text-sm font-semibold text-primary uppercase">
                {recipe.category.title}
              </p>
            )}
            <h3 class="text-xl font-bold mt-1 group-hover:text-primary transition-colors">
              {recipe.title}
            </h3>
            <p class="mt-2 text-gray-700 dark:text-slate-400">
              {recipe.summary}
            </p>
          </div>
        </a>
      </article>
    ))}
  </div>
  <div class="mt-12 text-center">
    <Button variant="primary" href="/tarifler" text="Tüm Tarifleri Gör" />
  </div>
</WidgetWrapper>