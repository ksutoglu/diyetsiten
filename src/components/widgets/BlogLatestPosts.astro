---
import { getBlogPermalink } from '~/utils/permalinks';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Button from '~/components/ui/Button.astro';
import { urlFor } from '~/lib/sanity'; // Sanity'den görsel çekmek için
import { format } from 'date-fns'; // Tarihleri formatlamak için

// index.astro'dan gelen 'posts' verisini burada yakalıyoruz
const { posts = [], title = "Blog'dan Son Yazılar" } = Astro.props;
---

<WidgetWrapper>
  <div class="mb-8 text-center">
    <h2 class="text-3xl font-bold tracking-tight sm:text-4xl font-heading">
      {title}
    </h2>
  </div>
  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    {posts.map((post) => (
      <article class="group">
        <a href={`/blog/${post.slug.current}`}>
          <div class="relative">
            <img 
              src={urlFor(post.mainImage).width(400).height(250).url()}
              alt={post.title}
              class="w-full h-64 object-cover rounded-lg shadow-md transition-transform duration-300 ease-in-out group-hover:scale-105"
            />
          </div>
          <div class="mt-4">
            <p class="text-sm text-muted">
              <time datetime={post.publishedAt}>
                {format(new Date(post.publishedAt), 'dd MMMM yyyy')}
              </time>
            </p>
            <h3 class="text-xl font-bold mt-2 group-hover:text-primary transition-colors">
              {post.title}
            </h3>
            <p class="mt-2 text-gray-700 dark:text-slate-400">
              {post.excerpt}
            </p>
          </div>
        </a>
      </article>
    ))}
  </div>
  <div class="mt-12 text-center">
    <Button variant="primary" href={getBlogPermalink()} text="Tüm Yazıları Gör" />
  </div>
</WidgetWrapper>