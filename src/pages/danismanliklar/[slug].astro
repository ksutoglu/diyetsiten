---
import Layout from '~/layouts/PageLayout.astro';
import { client, urlFor } from '~/lib/sanity';
import { PortableText } from 'astro-portabletext';

// Bu fonksiyon, Sanity'deki tüm danışmanlıkları bulur ve her biri için bir sayfa oluşturur
export async function getStaticPaths() {
  const danismanliklar = await client.fetch(`*[_type == "danismanlik"]{ "slug": slug.current }`);
  return danismanliklar.map((danismanlik) => ({
    params: { slug: danismanlik.slug },
  }));
}

const { slug } = Astro.params;
const danismanlik = await client.fetch(`*[_type == "danismanlik" && slug.current == "${slug}"][0]`);

const metadata = {
  title: danismanlik.title,
};
---

<Layout metadata={metadata}>
  <section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-3xl">
    <header>
      {danismanlik.mainImage && (
        <img 
          src={urlFor(danismanlik.mainImage).width(1200).height(600).url()} 
          alt={danismanlik.title} 
          class="mb-8 rounded-lg shadow-lg w-full h-auto object-cover"
        />
      )}
      <h1 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
        {danismanlik.title}
      </h1>
    </header>
    <div class="prose prose-lg dark:prose-invert max-w-none mt-8">
      <PortableText value={danismanlik.content} />
    </div>
  </section>
</Layout>