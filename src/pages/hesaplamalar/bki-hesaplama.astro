---
import Layout from '~/layouts/PageLayout.astro';
import BkiHesaplayici from '~/components/widgets/BkiHesaplayici.astro';
import { client, urlFor } from '~/lib/sanity';
import { PortableText } from 'astro-portabletext';

// Sanity'den "BKİ Hesaplama"ya ait içeriği çekiyoruz
const data = await client.fetch(`*[_type == "calculatorPage" && title == "bki-hesaplama"][0]`);

const metadata = {
  title: data?.pageTitle || 'Vücut Kitle İndeksi (BKİ) Hesaplama',
};
---

<Layout metadata={metadata}>
  <section class="px-4 py-16 sm:py-20">
    <div class="mx-auto max-w-2xl">
      <div class="mb-10 text-center">
        <h1 class="mb-4 text-4xl font-bold md:text-5xl">{data?.pageTitle}</h1>
      </div>

      <BkiHesaplayici />

      {data?.content && (
        <div class="prose dark:prose-invert max-w-none mt-12">
          <PortableText value={data.content} />
        </div>
      )}
    </div>
  </section>
</Layout>