---
import Layout from '~/layouts/PageLayout.astro';
import { client, urlFor } from '~/lib/sanity';
import { PortableText } from 'astro-portabletext';

export async function getStaticPaths() {
  const recipes = await client.fetch(`*[_type == "recipe"]{ "slug": slug.current }`);
  return recipes.map((recipe) => ({
    params: { slug: recipe.slug },
  }));
}

const { slug } = Astro.params;
const recipe = await client.fetch(`*[_type == "recipe" && slug.current == "${slug}"][0]`);

const metadata = {
  title: recipe.title,
  description: recipe.summary,
};
---

<Layout metadata={metadata}>
  <section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-3xl">
    <header>
      <h1 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-8 font-heading text-center">
        {recipe.title}
      </h1>
      <img 
        src={urlFor(recipe.mainImage).width(1200).height(600).url()} 
        alt={recipe.title} 
        class="mb-8 rounded-lg shadow-lg w-full h-auto object-cover"
      />
    </header>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="md:col-span-1">
        <h2 class="text-2xl font-bold mb-4 border-b-2 border-primary pb-2">Malzemeler</h2>
        <div class="prose dark:prose-invert">
          <p style="white-space: pre-wrap;">{recipe.ingredients}</p>
        </div>
      </div>

      <div class="md:col-span-2">
        <h2 class="text-2xl font-bold mb-4 border-b-2 border-primary pb-2">Hazırlanışı</h2>
        <div class="prose prose-lg dark:prose-invert max-w-none">
          <PortableText value={recipe.instructions} />
        </div>
      </div>
    </div>
  </section>
</Layout>