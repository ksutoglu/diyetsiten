---
import Layout from '~/layouts/PageLayout.astro';
import { client, urlFor } from '~/lib/sanity';

// Sanity'den tüm tarifleri en yeniden eskiye doğru sıralayarak ve kategori bilgisini de alarak çekiyoruz
const recipes = await client.fetch(`*[_type == "recipe"]{..., "category": category->{title, slug}} | order(_createdAt desc)`);
const categories = await client.fetch(`*[_type == "recipeCategory"] | order(title asc)`);

const metadata = {
  title: 'Tarifler',
  description: 'Sağlıklı, lezzetli ve pratik tarifler.',
};
---

<Layout metadata={metadata}>
  <section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
    <header>
      <h1 class="text-center text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 md:mb-6">
        Tüm Tarifler
      </h1>
    </header>
    <div class="mb-12 text-center">
      <a href="/tarifler" class="inline-block bg-primary text-white px-4 py-2 rounded-full text-sm font-semibold mr-2 mb-2">
        Tümü
      </a>
      {categories.map((category) => (
        <a href={`/tarifler/kategori/${category.slug.current}`} class="inline-block bg-gray-200 dark:bg-slate-700 px-4 py-2 rounded-full text-sm font-semibold mr-2 mb-2 hover:bg-primary hover:text-white transition-colors">
          {category.title}
        </a>
      ))}
    </div>

    <ul>
      {recipes.map((recipe) => (
        <li class="mb-12">
          <article class="group">
            <a href={`/tarifler/${recipe.slug.current}`}>
              <div class="grid grid-cols-1 md:grid-cols-4 md:gap-6">
                {/* Görsel Alanı */}
                <div class="md:col-span-1 mb-4 md:mb-0">
                  <img 
                    src={urlFor(recipe.mainImage).width(400).height(250).url()}
                    alt={recipe.title}
                    class="rounded-lg shadow-md w-full h-auto object-cover transition-transform duration-300 ease-in-out group-hover:scale-105"
                  />
                </div>
                {/* Metin Alanı */}
                <div class="md:col-span-3">
                  {recipe.category?.title && (
                    <p class="text-sm font-semibold text-primary uppercase mb-1">{recipe.category.title}</p>
                  )}
                  <h2 class="text-2xl font-bold leading-tight mb-2 font-heading transition-colors duration-300 ease-in-out group-hover:text-primary">
                    {recipe.title}
                  </h2>
                  <p class="mt-4 text-gray-700 dark:text-slate-400">
                    {recipe.summary}
                  </p>
                </div>
              </div>
            </a>
          </article>
        </li>
      ))}
    </ul>
  </section>
</Layout>